.main-chat__message-list__message
  .main-chat__message-list__message__post-info
    .main-chat__message-list__message__post-info__post-name
      = message.user.name
    .main-chat__message-list__message__post-info__post-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message__post-message
    - if message.content.present?
      = message.content 
    = image_tag message.image.url, class: 'main-chat__message-list__message__post-image' if message.image.present?