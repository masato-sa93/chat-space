.message{data: {message: {id: message.id}}}
  .post-info
    .post-name
      = message.user.name
    .post-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  - if message.content.present?
    %p.post-message= message.content
  = image_tag message.image.url, class: 'post-image' if message.image.present?